<form action="/pizza-orders/<%= @order.id %>" method="post">
  <p>  <label for="first-name">First Name:</label>  <input type="text" name="first_name" id="first-name" value="<%= @order.first_name %>"></p>
  <p> <label for="last-name">Last Name:</label> <input type="text" name="last_name" id="last-name" value="<%= @order.last_name %>"></p>
  <p> <label for="pizza-topping">Select your topping:</label>
    <select id="pizza-topping" name="topping">
      <option value="Margherita">Margherita</option>
      <option value=" Pepperoni">Pepperoni</option>
      <option value="Quattro Formaggi">Quattro Formaggi</option>
      <option value="Vegan">Vegan</option>
    </select></p>
  <p>Quantity: <input type="text" name="quantity" value="<%= @order.quantity %>"></p>
  <input type="submit" value="Update Order">
</form>
